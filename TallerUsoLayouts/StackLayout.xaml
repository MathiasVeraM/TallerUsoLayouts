<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerUsoLayouts.StackLayout"
             Title="StackLayout">
    <VerticalStackLayout 
        Padding="20"
        Spacing="20"
        HorizontalOptions="Fill"
        VerticalOptions="CenterAndExpand">
        <Label 
            Text="Elizabeth Guerron"
            FontSize="Title"
            FontAttributes="Bold"
            TextColor="#af56e8"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Jean Luc Morales"
            FontSize="Subtitle"
            FontAttributes="Bold"
            TextColor="#54ebc2"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Mathias Vera"
            FontSize="Body"
            FontAttributes="Bold"
            TextColor="#eb924c"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="FlexLayoutButton"
                Clicked="FlexLayoutButton_Clicked"
                Text="Ir a Flex Layout"
                HorizontalOptions="Center"
                VerticalOptions="Center"
            />
    </VerticalStackLayout>
</ContentPage>